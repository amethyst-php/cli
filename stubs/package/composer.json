{
    "name": "{{ Author }}/amethyst-{{ PackageName|kebab }}",
    "type": "library",
    "keywords": ["laravel", "amethyst", "amethyst-{{ PackageName|kebab }}", "{{ PackageName|kebab }}"],
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "railken/amethyst-common": "0.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "orchestra/testbench": "3.6.*"
    },
    "autoload": {
        "psr-4" : {
            "{{ MyNamespace|escapeSlash|classify }}\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "{{ MyNamespace|escapeSlash|classify }}\\Tests\\": "tests/" 
        }
    },
    "extra": {
        "amethyst": {
            "package": "{{ PackageName|kebab }}",
            "namespace": "{{ MyNamespace|escapeSlash|classify }}"
        },
        "laravel": {
            "providers": [
                "{{ MyNamespace|escapeSlash|classify }}\\Providers\\{{ PackageName|classify }}ServiceProvider"
            ]
        }
    }
}
